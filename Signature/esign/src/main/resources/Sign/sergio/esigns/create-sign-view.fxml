<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Sign.sergio.esigns.controller.CreateSignatureController">
	<content>
		<VBox alignment="CENTER_RIGHT" maxWidth="500.0" minWidth="400.0" prefWidth="450.0" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 20;">
			<padding>
				<Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
			</padding>

			<!-- Header Section -->
			<VBox alignment="CENTER" spacing="10.0">
				<Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Create Signature" />
				<Separator prefWidth="200.0" style="-fx-background-color: #3498db;" />
			</VBox>

			<!-- Form Fields Container -->
			<VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
				<padding>
					<Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
				</padding>

				<!-- Signature ID -->
				<VBox spacing="8.0">
					<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Signature ID" />
					<TextField fx:id="txtId" editable="false" prefHeight="35.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" />
				</VBox>

				<!-- Signature Name -->
				<VBox spacing="8.0">
					<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Signature Name" />
					<TextField fx:id="txtName" prefHeight="35.0" promptText="Enter signature name..." style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8; -fx-font-size: 13px;" />
				</VBox>

				<!-- Template Name -->
				<VBox spacing="8.0">
					<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Template Name" />
					<TextField fx:id="txtDescription" prefHeight="35.0" promptText="Enter template name..." style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8; -fx-font-size: 13px;" />
				</VBox>

				<!-- Recipient Name -->
				<VBox spacing="8.0">
					<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Recipient Name" />
					<HBox spacing="10.0">
						<ComboBox fx:id="cmbProduct" prefHeight="35.0" prefWidth="200.0" promptText="Select recipient..." style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5;" />
						<TextField fx:id="txtProductName" editable="false" prefHeight="35.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" HBox.hgrow="ALWAYS" />
					</HBox>
				</VBox>

				<!-- Recipient Email -->
				<VBox spacing="8.0">
					<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Recipient Email" />
					<HBox spacing="10.0">
						<ComboBox fx:id="cmbCategory" prefHeight="35.0" prefWidth="200.0" promptText="Select email..." style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5;" />
						<TextField fx:id="txtCategoryName" editable="false" prefHeight="35.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" HBox.hgrow="ALWAYS" />
					</HBox>
				</VBox>

				<!-- Status -->
				<VBox spacing="8.0">
					<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Status" />
					<HBox spacing="10.0">
						<ComboBox fx:id="cmbStatus" prefHeight="35.0" prefWidth="200.0" promptText="Select status..." style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5;" />
						<TextField fx:id="txtStatusName" editable="false" prefHeight="35.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" HBox.hgrow="ALWAYS" />
					</HBox>
				</VBox>

				<!-- Dates -->
				<HBox spacing="15.0">
					<VBox spacing="8.0" HBox.hgrow="ALWAYS">
						<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Date Sent" />
						<TextField fx:id="txtQuantityAvailable" editable="false" prefHeight="35.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" />
					</VBox>
					<VBox spacing="8.0" HBox.hgrow="ALWAYS">
						<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Date Signed" />
						<HBox spacing="10.0">
							<ComboBox fx:id="cmbInventory" prefHeight="35.0" prefWidth="200.0" promptText="..." style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5;" />
							<TextField fx:id="txtInventoryName" editable="false" prefHeight="35.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" HBox.hgrow="ALWAYS" />
						</HBox>
					</VBox>
				</HBox>

				<!-- Signature Field Type -->
				<VBox spacing="8.0">
					<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Signature Field Type" />
					<TextField fx:id="txtPrice" prefHeight="35.0" promptText="Enter type..." style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" />
				</VBox>
			</VBox>

			<!-- Action Buttons -->
			<HBox alignment="CENTER" spacing="15.0">
				<padding>
					<Insets top="20.0" />
				</padding>

				<Button fx:id="btnBack" onAction="#onBack" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20;" text="← Back" />
				<Button fx:id="btnUpdate" onAction="#onSubmit" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20;" text="Submit" />
				<Button fx:id="btnClose" onAction="#onClose" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20;" text="Close" />
			</HBox>
		</VBox>
	</content>
</ScrollPane>
