    <!-- Background GIF -->
    <ImageView fx:id="imgHug" fitHeight="500.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../../images/SIGNFR.gif" />
        </image>
    </ImageView>

