    <Button onAction="#onClicked" prefHeight="35" prefWidth="120" style="-fx-background-color: white; -fx-border-color: #0ab6ff;" text="Proceed &gt;&gt;&gt;" textAlignment="CENTER" translateY="-60" StackPane.alignment="BOTTOM_CENTER" />

