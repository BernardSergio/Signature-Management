<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Sign.sergio.esigns.controller.EditSignatureController">
	<content>
		<VBox alignment="TOP_CENTER" maxWidth="500.0" minWidth="400.0" prefWidth="450.0" spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 20;">
			<padding>
				<Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
			</padding>

			<!-- Header Section -->
			<VBox alignment="CENTER" spacing="10.0">
				<Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Edit Signature" />
				<Separator prefWidth="200.0" style="-fx-background-color: #3498db;" />
			</VBox>

			<!-- Form Fields Container -->
			<VBox spacing="20.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
				<padding>
					<Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
				</padding>

				<!-- Signature ID -->
				<VBox spacing="8.0">
					<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Signature ID" />
					<TextField fx:id="txtId" editable="false" prefHeight="35.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" />
				</VBox>

				<!-- Signature Name -->
				<VBox spacing="8.0">
					<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Signature Name" />
					<TextField fx:id="txtSignatureName" prefHeight="35.0" promptText="Enter signature name..." style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8; -fx-font-size: 13px;" />
				</VBox>

				<!-- Template Name -->
				<VBox spacing="8.0">
					<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Template Name" />
					<TextField fx:id="txtTemplateName" prefHeight="35.0" promptText="Select or enter template name..." style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8; -fx-font-size: 13px;" />
				</VBox>

				<!-- Recipient Information Section -->
				<VBox spacing="15.0">
					<Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Recipient Information" />
					<Separator style="-fx-background-color: #ecf0f1;" />

					<!-- Recipient Name -->
					<VBox spacing="8.0">
						<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Recipient Name" />
						<HBox spacing="10.0">
							<ComboBox fx:id="cmbRecipient" prefHeight="35.0" prefWidth="200.0" promptText="Select recipient..." style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5;" />
							<TextField fx:id="txtRecipientName" editable="false" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" />
						</HBox>
					</VBox>

					<!-- Recipient Email -->
					<VBox spacing="8.0">
						<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Recipient Email" />
						<TextField fx:id="txtRecipientEmail" prefHeight="35.0" promptText="recipient@example.com" style="-fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8; -fx-font-size: 13px;" />
					</VBox>
				</VBox>

				<!-- Status and Dates Section -->
				<VBox spacing="15.0">
					<Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Status &amp; Timeline" />
					<Separator style="-fx-background-color: #ecf0f1;" />

					<!-- Status -->
					<VBox spacing="8.0">
						<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Status" />
						<HBox spacing="10.0">
							<ComboBox fx:id="cmbStatus" prefHeight="35.0" prefWidth="150.0" promptText="Select status..." style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5;" />
							<TextField fx:id="txtStatusName" editable="false" prefHeight="35.0" HBox.hgrow="ALWAYS" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" />
						</HBox>
					</VBox>

					<!-- Date Fields -->
					<HBox spacing="15.0">
						<VBox spacing="8.0" HBox.hgrow="ALWAYS">
							<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Date Sent" />
							<TextField fx:id="txtDateSent" editable="false" prefHeight="35.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" />
						</VBox>

						<VBox spacing="8.0" HBox.hgrow="ALWAYS">
							<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Date Signed" />
							<TextField fx:id="txtDateSigned" editable="false" prefHeight="35.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;" />
						</VBox>
					</HBox>
				</VBox>

				<!-- Signature Configuration -->
				<VBox spacing="8.0">
					<Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Signature Field Type" />
					<ComboBox fx:id="cmbSignatureType" prefHeight="35.0" prefWidth="200.0" promptText="Select signature type..." style="-fx-background-color: white; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-background-radius: 5;" />
				</VBox>
			</VBox>

			<!-- Action Buttons -->
			<HBox alignment="CENTER" spacing="15.0">
				<padding>
					<Insets top="20.0" />
				</padding>

				<Button fx:id="btnBack" mnemonicParsing="false" onAction="#onBack" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;" text="← Back">
					<font>
						<Font name="System Bold" size="13.0" />
					</font>
				</Button>

				<Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#onSubmit" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;" text="Submit">
					<font>
						<Font name="System Bold" size="13.0" />
					</font>
				</Button>

				<Button fx:id="btnClose" mnemonicParsing="false" onAction="#onClose" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand;" text="Close">
					<font>
						<Font name="System Bold" size="13.0" />
					</font>
				</Button>
			</HBox>
		</VBox>
	</content>
</ScrollPane>